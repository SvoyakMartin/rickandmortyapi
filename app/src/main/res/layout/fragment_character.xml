<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharactersFragment">

    <Button
        android:id="@+id/button_create_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_create_user_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_light_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_light_theme_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_dark_theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_create_user" />

    <Button
        android:id="@+id/button_dark_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_dark_theme_text"
        app:layout_constraintBottom_toBottomOf="@+id/button_light_theme"
        app:layout_constraintEnd_toStartOf="@id/button_auto_theme"
        app:layout_constraintStart_toEndOf="@+id/button_light_theme"
        app:layout_constraintTop_toTopOf="@+id/button_light_theme" />

    <Button
        android:id="@+id/button_auto_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_auto_theme_text"
        app:layout_constraintBottom_toBottomOf="@id/button_light_theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_dark_theme"
        app:layout_constraintTop_toTopOf="@id/button_light_theme" />

    <ru.svoyakmartin.rickandmortyapi.customView.LastSeenView
        android:id="@+id/LastSeenView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button_create_user"
        app:layout_constraintEnd_toStartOf="@id/LastSeenAnimView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ru.svoyakmartin.rickandmortyapi.customView.LastSeenAnimView
        android:id="@+id/LastSeenAnimView"
        android:layout_width="200dp"
        android:layout_height="80dp"
        app:location="Citadel of Ricks"
        app:layout_constraintBottom_toTopOf="@+id/button_create_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/LastSeenView"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>